<% @posts.each do |post|%>
    <div class="card mt p-3 mb-3">
        <div class=" row ">
            <div class=" col-11">
                <h2><%= link_to post.title, community_post_path(post.community_id, post)%></h2>
                <small><%=link_to post.community.name ,community_path(post.community) %> posted by <%= link_to post.user.full_name, profile_path(post.user.username) %>  <%=time_ago_in_words post.created_at%> ago.</small>
                <p class="mt-4"><%= truncate post.body, length: 200 %></p>
            </div>
        </div>    
    </div>
    
<%end%>